<!-- side menu bar with cover photo and albums listed -->
<div class="col-lg-3 col-md-3 col-sm-3 side_menu" style="border-right: solid 1px #000;">
    <div class="flex-between"><h3><%=c %></h3>
        <span class="glyphicon glyphicon-lock lock"></span></div>

    <img id="cover" src="default.jpg" class="col-lg-12 col-md-12 col-sm-12" style="height:200px;">
    <ul id="sortable" class="col-lg-3 col-md-3 col-sm-3">

    <% aList.forEach(function(row, rowIdx) {%>
    <li class="ui-state-default flex-between">
        <%if(row.name == selectedAlbum) {%>
        <a onclick="displayAlbum(this)" aname="<%=selectedAlbum%>">
            <span class="glyphicon glyphicon-resize-vertical active"></span>
            <%=selectedAlbum%>
        </a>
    <%} else {%>
        <a onclick="displayAlbum(this)" aname="<%=row.name%>">
            <span class="glyphicon glyphicon-resize-vertical"></span>
            <%=row.name %>
        </a>
    <% } %>

        <div id="album-options">
            <span class="glyphicon glyphicon-trash trash"></span>
        </div>
    </li>
    <%}); %>


    <li class="ui-state-default ui-state-disabled new-album-list-item flex-between">
            <span class="glyphicon glyphicon-plus" id="add_album"></span>
            <input type="text" placeholder="e.g. Reception" id="new_album">
        </li>
    </ul>

    <a href="/clientpreview" id="client-view-btn"><button>Preview</button></a>
</div>
